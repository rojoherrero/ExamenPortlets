<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	
	<portlet>
		<portlet-name>portlet-emisor-a</portlet-name>
		<display-name>Portlet Emisor A</display-name>
		<portlet-class>com.examen.portlet.PortletEmisorA</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/portletemisora/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>Portlet Emisor A</title>
			<short-title>Portlet Emisor A</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
        <supported-publishing-event>
            <qname xmlns:x="http://evento.examen.enviar.portletB.com">x:Persona</qname>
        </supported-publishing-event>
        <supported-publishing-event>
            <qname xmlns:x="http://evento.examen.enviar.portletC.com">x:Persona</qname>
        </supported-publishing-event>
	</portlet>
	<portlet>
		<portlet-name>portlet-receptor-b</portlet-name>
		<display-name>Portlet Receptor B</display-name>
		<portlet-class>
			com.examen.portlet.PortletReceptorB
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/portletreceptorb/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>Portlet Receptor B</title>
			<short-title>Portlet Receptor B</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
        <supported-processing-event>
            <qname xmlns:x="http://evento.examen.enviar.portletB.com">x:Persona</qname>
        </supported-processing-event>
	</portlet>
	<portlet>
		<portlet-name>portlet-receptor-c</portlet-name>
		<display-name>Portlet Receptor C</display-name>
		<portlet-class>
			com.examen.portlet.PortletReceptorC
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/portletreceptorc/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>Portlet Receptor C</title>
			<short-title>Portlet Receptor C</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
        <supported-processing-event>
            <qname xmlns:x="http://evento.examen.enviar.portletC.com">x:Persona</qname>
        </supported-processing-event>
	</portlet>
    <event-definition>
        <qname xmlns:x="http://evento.examen.enviar.portletB.com">x:Persona</qname>
        <value-type>com.examen.entidades.Persona</value-type>
    </event-definition>
    <event-definition>
        <qname xmlns:x="http://evento.examen.enviar.portletC.com">x:Persona</qname>
        <value-type>com.examen.entidades.Persona</value-type>
    </event-definition>
</portlet-app>